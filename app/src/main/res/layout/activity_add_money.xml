        android:layout_height="match_parent"
        android:background="@color/grey_lighter_dense">

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_default"
            android:orientation="vertical"
            tools:context="skoreon.fantasy.CreateTeamActivity">

            <RelativeLayout
                android:id="@+id/tool"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:layout_alignParentTop="true"
                android:background="@drawable/gradient">


                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    style="@style/ToolbarTheme2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="top">

                        <ImageView
                            android:id="@+id/image_back"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:padding="@dimen/_4sdp"
                            android:src="@drawable/ic_back"
                            android:tint="@color/white" />

                        <TextView
                            style="@style/TitleTextStyle."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:fontFamily="@font/circular_medium"
                            android:text="Add Money"
                            android:textColor="@color/white"
                            android:textSize="22sp" />
                    </RelativeLayout>
                </androidx.appcompat.widget.Toolbar>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/bottom"
                    android:backgroundTint="@color/grey_lighter_dense" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/top_linear_balance"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_below="@+id/tool"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@drawable/rounded_corner_white"
                android:backgroundTint="@color/color_card"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:text="Current Balance"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:id="@+id/wallet_total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:padding="@dimen/_12sdp"
                    android:layout_margin="@dimen/_4sdp"
                    android:background="@drawable/rounded_corner_white"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:text="â‚¹188"
                    android:textColor="@color/text"
                    android:textSize="@dimen/_16sdp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linear_wallet_Added"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_below="@+id/top_linear_balance"
                android:orientation="vertical"
                android:padding="10dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Amount to Add"
                    android:textColor="@color/text"
                    android:textSize="@dimen/_16sdp" />

                <EditText
                    android:id="@+id/edit_amounts"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/purple_sqaure"
                    android:drawableLeft="@drawable/ic_rupee"
                    android:fontFamily="@font/roboto"
                    android:paddingStart="@dimen/_16sdp"
                    android:text="500"
                    android:textColor="@color/text"
                    android:textSize="@dimen/_18sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginTop="@dimen/_20sdp">

                    <TextView
                        android:id="@+id/add_100rs"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
