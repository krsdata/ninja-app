<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewmodel"
            type="ninja11.fantasy.ui.UpdateAppDialogFragment" />
    </data>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <LinearLayout
            android:id="@+id/linear_empty_contest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dip"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/rounded_corner_white"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WHATS NEW"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/text"
                        android:fontFamily="@font/montserrat_medium"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/dotted_line_blue"
                        android:layout_marginTop="2dp"
                        />

                </LinearLayout>
                <ImageView
                    android:id="@+id/img_close"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/ic_close_black_24dp"
                    android:layout_gravity="right"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/wallet_total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount Added + Winning =$188"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black"
                android:visibility="invisible"
                android:fontFamily="@font/montserrat_regular"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/release_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. Improved user interface\n\n2. Earn more with new updates"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/text"
                    android:fontFamily="@font/montserrat_regular"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usable Cash Bonus"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/text"
                    android:visibility="invisible"
                    android:fontFamily="@font/montserrat_regular"
                    />
                <TextView
                    android:id="@+id/usable_cashbonus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹39"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/text"
                    android:visibility="invisible"
                    android:fontFamily="@font/montserrat_medium"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey"
                android:layout_marginTop="15dp"/>


            <TextView
                android:id="@+id/update_apk"
                android:layout_width="180dp"
                android:layout_height="@dimen/_35sdp"
                android:text="UPDATE NOW"
                android:background="@drawable/default_rounded_button_sportsfight"
                android:layout_gravity="center"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/_14sdp"
                android:backgroundTint="@color/color_card"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_medium"
                />
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
</layout>