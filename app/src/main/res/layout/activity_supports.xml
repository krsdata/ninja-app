<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="onRefernEarn"
            type="ninja11.fantasy.SupportActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/grey_lighter_dense">


        <RelativeLayout
            android:id="@+id/tool"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_alignParentTop="true"
                style="@style/ToolbarTheme2"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/image_back"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:src="@drawable/ic_back"
                        android:gravity="center"
                        android:tint="@color/white"
                        android:padding="@dimen/_4sdp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Support Team"
                        style="@style/TitleTextStyle."
                        android:fontFamily="@font/circular_medium"
                      android:layout_centerHorizontal="true"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"
                        android:textSize="22sp" />
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>


        </RelativeLayout>


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_default"
                android:fitsSystemWindows="true"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Get In Touch"
                    android:layout_marginLeft="15dip"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/text"
                    android:textSize="22sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Our support team available on given WhatsApp, Call, Email &amp; SMS. "
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/text"
                    android:gravity="start"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:layout_marginLeft="15dip"
                    android:textSize="@dimen/_16sdp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Please feel free to contact us"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/text"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:layout_marginLeft="15dip"
                    android:textSize="16sp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Connect With"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="22sp"
                    android:textColor="@color/text"
                    android:layout_marginTop="25dip"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">

                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_gravity="center"
                         android:gravity="center"
                         android:orientation="horizontal">
                         <androidx.cardview.widget.CardView
                             android:layout_width="@dimen/_85sdp"
                             android:layout_height="80dp"
                             android:background="@color/white"
                             app:cardCornerRadius="@dimen/_8sdp"
                             android:layout_margin="@dimen/_8sdp"
                             >

                             <ImageView
                                 android:id="@+id/call_whatsapp"
                                 android:layout_width="match_parent"
                                 android:layout_height="match_parent"
                                 android:padding="@dimen/_8sdp"
                                 android:src="@drawable/ic_whatsapp"
                                 android:layout_marginBottom="@dimen/_8sdp"/>
                             <TextView
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="WhatsApp"
                                 android:layout_gravity="center_vertical|bottom|center_horizontal"
                                 android:fontFamily="@font/open_sans_light"
                                 android:textColor="@color/black"/>

                         </androidx.cardview.widget.CardView>


                         <androidx.cardview.widget.CardView
                             android:layout_width="@dimen/_85sdp"
                             android:layout_height="80dp"
                             android:background="@color/white"
                             app:cardCornerRadius="@dimen/_8sdp"
                             android:layout_margin="@dimen/_8sdp">

                             <ImageView
                                 android:id="@+id/call_phone"
                                 android:layout_width="match_parent"
                                 android:layout_height="match_parent"
                                 android:src="@drawable/ic_phone_call"
                                 android:padding="@dimen/_8sdp"
                                 android:layout_marginBottom="@dimen/_8sdp"/>
                             <TextView
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="Phone"
                                 android:layout_gravity="center_vertical|bottom|center_horizontal"
                                 android:fontFamily="@font/open_sans_light"
                                 android:textColor="@color/black"/>

                         </androidx.cardview.widget.CardView>

                     </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_85sdp"
                            android:layout_gravity="center"
                            android:layout_height="80dp"
                            android:background="@color/white"
                            app:cardCornerRadius="@dimen/_8sdp"
                            android:layout_margin="@dimen/_8sdp"
                            >

                            <ImageView
                                android:id="@+id/call_email"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="@dimen/_8sdp"
                                android:src="@drawable/ic_gmail"
                                android:layout_marginBottom="@dimen/_8sdp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Email"
                                android:layout_gravity="center_vertical|bottom|center_horizontal"
                                android:fontFamily="@font/open_sans_light"
                                android:textColor="@color/black"/>

                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_85sdp"
                            android:layout_height="80dp"
                            android:background="@color/white"
                            app:cardCornerRadius="@dimen/_8sdp"
                            android:layout_margin="@dimen/_8sdp">

                            <ImageView
                                android:id="@+id/call_sms"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_sms"
                                android:padding="@dimen/_8sdp"
                                android:layout_marginBottom="@dimen/_8sdp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SMS"
                                android:layout_gravity="center_vertical|bottom|center_horizontal"
                                android:fontFamily="@font/open_sans_light"
                                android:textColor="@color/black"/>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>




    </LinearLayout>
</layout>
