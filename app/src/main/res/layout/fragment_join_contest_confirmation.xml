<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewmodel"
            type="ninja11.fantasy.ui.JoinContestDialogFragment" />
    </data>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <LinearLayout
            android:id="@+id/linear_empty_contest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dip"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/rounded_corner_white"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CONFIRMATION"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/text"
                    android:fontFamily="@font/montserrat_medium"
                    />
                <ImageView
                    android:id="@+id/img_close"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/ic_close_black_24dp"
                    android:layout_gravity="right"
                    android:layout_alignParentRight="true"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/wallet_total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount Added + Winning =$188"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/text"
                android:fontFamily="@font/montserrat_regular"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entry"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/text"
                    android:fontFamily="@font/montserrat_regular"
                    />
                <TextView
                    android:id="@+id/entry_fees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹39"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/text"
                    android:fontFamily="@font/montserrat_medium"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usable Cash Bonus"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/text"
                    android:fontFamily="@font/montserrat_regular"
                    />
                <TextView
                    android:id="@+id/usable_cashbonus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹39"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/text"
                    android:fontFamily="@font/montserrat_medium"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey"
                android:layout_marginTop="15dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To Pay"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/montserrat_regular"
                    />
                <TextView
                    android:id="@+id/usable_topay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹39"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/montserrat_medium"
                    />


            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="By joining this,you accept Skoreon "
                        android:textSize="@dimen/_8sdp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:fontFamily="@font/montserrat_regular"
                        />

                    <TextView
                        android:id="@+id/terms_condition"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="T&amp;C"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="@dimen/_8sdp"
                        android:textColor="@color/blue"
                        android:fontFamily="@font/montserrat_regular"
                        />


                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="and confirm that you are not a resident of
                assam, Odisha, Telangana, nagaland and Sikkim. I also agree to be contancted by SkoreOn and their partner"
                    android:gravity="left"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/text"
                    android:fontFamily="@font/montserrat_regular"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=""
                    android:gravity="center"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_regular"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/join_contest"
                android:layout_width="180dp"
                android:layout_height="@dimen/_35sdp"
                android:text="JOIN CONTEST"
                android:background="@drawable/default_rounded_button_sportsfight"
                android:layout_gravity="center"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/_14sdp"
                android:gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_medium"
                />
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
</layout>