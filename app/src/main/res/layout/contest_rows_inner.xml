<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6sp"
    android:elevation="@dimen/_6sdp"
    android:layout_marginEnd="@dimen/_6sdp"
    android:layout_marginStart="@dimen/_6sdp"
    android:layout_marginBottom="@dimen/_2sdp"
    android:layout_marginTop="@dimen/_4sdp"
    app:cardBackgroundColor="@color/white"

    >
    <LinearLayout
        android:id="@+id/linear_trades_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_6sdp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_11sdp"
            android:layout_marginLeft="@dimen/matches_view_left_margin_inner"
            android:layout_marginRight="@dimen/matches_view_right_margin_inner"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prize Pool"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Winner"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/text"
                android:fontFamily="@font/montserrat_regular"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entry"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/text"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_6sdp"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/contest_prize_pool"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dip"
                    android:fontFamily="@font/circular_medium"
                    android:text="$300"
                    android:textColor="@color/text"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/winner_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/fab"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="@font/montserrat_medium"
                android:layout_gravity="center_vertical"/>
            
            <ImageView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:tint="@color/text"
                android:src="@drawable/ic_arrow_drop_up" />
            
         
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="5dip"
                android:gravity="right">
                <TextView
                    android:id="@+id/contest_entry_prize"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="wrap_content"
                    android:text="Rs39"
                    android:gravity="center"
                    android:textSize="@dimen/_12sdp"
                    android:padding="6dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/default_rounded_button_sportsfight"
                    android:textColor="@color/white"
                    android:fontFamily="@font/circular_medium"
                    />


            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/upcoming_linear_contest_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="6dp"
            android:layout_marginStart="@dimen/matches_view_left_margin_inner"
            android:layout_marginEnd="@dimen/matches_view_right_margin_inner">
            <ProgressBar
                android:id="@+id/contest_progress"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_8sdp"
                android:indeterminateOnly="false"
                android:progressDrawable="@drawable/progressbar_inderminate"
                android:indeterminateDrawable="@android:drawable/progress_indeterminate_horizontal"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_16sdp"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="2dp"
                >
                <TextView
                    android:id="@+id/total_spot_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contest Full"
                    android:textColor="@color/text"
                    android:textSize="10sp"
                    android:fontFamily="@font/montserrat_medium"/>

                <TextView
                    android:id="@+id/total_spot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50,000 spots"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/text"
                    android:textSize="10sp"
                    android:fontFamily="@font/montserrat_medium"
                    />

            </RelativeLayout>


        </LinearLayout>

<!--        <View-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="1dp"-->
<!--            android:background="@color/viewE0"/>-->
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="@dimen/_30sdp"
           android:layout_marginTop="3dip"
           android:background="#f6f5f3"
           android:gravity="center_vertical"
           android:orientation="horizontal">

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:gravity="center_vertical"
               android:paddingStart="@dimen/_6sdp"
             android:layout_alignParentStart="true"
               android:orientation="horizontal">

               <ImageView
                   android:layout_width="18dp"
                   android:layout_height="18dp"
                   android:fontFamily="@font/montserrat_bold"
                   android:gravity="center"
                   android:scaleType="centerInside"
                   android:src="@drawable/trophy_first_pos"
                   />
               <TextView
                   android:id="@+id/first_prize"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:textColor="@color/text"
                   android:text="â‚¹5 Lakh"
                   android:textSize="@dimen/_10sdp"
                   android:layout_marginLeft="@dimen/_3sdp"
                   android:fontFamily="@font/montserrat_bold"/>
           </LinearLayout>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_alignParentEnd="true"
               android:orientation="horizontal">

               <LinearLayout
                   android:id="@+id/multiplayTeam"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="@dimen/_20sdp"
                   android:backgroundTint="@color/fab"
                   android:layout_marginEnd="@dimen/_10sdp"
                  android:layout_gravity="center_vertical"
                   android:background="@drawable/rounded_btn_pink"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="M"
                       android:textSize="12sp"
                       android:textStyle="bold"
                       android:layout_marginStart="@dimen/_6sdp"
                       android:fontFamily="sans-serif-medium"
                       android:gravity="center"
                       android:layout_gravity="center_vertical"
                       android:textColor="@color/white"/>

                   <TextView
                       android:id="@+id/mutiplayer"
                       android:layout_width="@dimen/_19sdp"
                       android:layout_height="@dimen/_13sdp"
                       android:text="2"
                       android:textSize="10sp"
                       android:gravity="center"
                       android:layout_marginEnd="@dimen/_4sdp"
                       android:layout_marginStart="@dimen/_4sdp"
                       android:layout_gravity="center_vertical"
                       android:backgroundTint="@color/white"
                       android:background="@drawable/gradient"
                       android:textColor="@color/text"
                       android:fontFamily="sans-serif-medium"
                       />

               </LinearLayout>

               <LinearLayout
                   android:id="@+id/bonus"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="@dimen/_20sdp"
                   android:backgroundTint="@color/reply_orange_500"
                   android:layout_marginEnd="@dimen/_10sdp"
                   android:background="@drawable/rounded_btn_pink"
                   android:layout_gravity="center_vertical"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="B"
                       android:textStyle="bold"
                       android:textSize="12sp"
                       android:layout_marginStart="@dimen/_6sdp"
                       android:fontFamily="sans-serif-medium"
                       android:gravity="center"
                       android:layout_gravity="center_vertical"
                       android:textColor="@color/white"/>

                   <TextView
                       android:id="@+id/tv_bonus"
                       android:layout_width="@dimen/_19sdp"
                       android:layout_height="@dimen/_13sdp"
                       android:text="2"
                       android:textSize="10sp"
                       android:gravity="center"
                       android:layout_marginEnd="2dp"
                       android:layout_marginStart="@dimen/_7sdp"
                       android:layout_gravity="center_vertical"
                       android:backgroundTint="@color/white"
                       android:background="@drawable/gradient"
                       android:textColor="@color/text"
                       android:fontFamily="sans-serif-medium"
                       />
               </LinearLayout>



                   <TextView
                       android:id="@+id/contest_cancellation"
                       android:layout_width="@dimen/_24sdp"
                       android:layout_height="@dimen/_24sdp"
                       android:text="C"
                       android:fontFamily="@font/circular_medium"
                       android:layout_gravity="center_vertical"
                       android:gravity="center"
                       android:layout_marginEnd="@dimen/_6sdp"
                       android:textColor="@color/white"
                       android:textSize="16sp"
                       android:backgroundTint="@color/blue"
                       android:background="@drawable/circle_green"
                       />
           </LinearLayout>


       </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>
</layout>