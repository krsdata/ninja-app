<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="contentviews"
            type="ninja11.fantasy.CreateTeamActivity" />
    </data>

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_lighter_dense"
        tools:context="skoreon.fantasy.CreateTeamActivity"
        android:orientation="vertical"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/linear_top_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient"
                android:layout_alignParentTop="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_alignParentTop="true"
                    android:gravity="top">

                    <ImageView
                        android:id="@+id/image_back"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:src="@drawable/ic_back"
                        android:gravity="center"
                        android:tint="@color/white"
                        android:padding="@dimen/_4sdp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:id="@+id/head"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="Create Team"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/_22sdp"
                        android:fontFamily="@font/montserrat_medium"/>

                    <TextView
                        android:id="@+id/match_timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10h 21m left"
                       android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:layout_below="@+id/head"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/white"/>



                    <ImageView
                        android:id="@+id/fantasy_points"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:src="@drawable/help"
                        android:tint="@color/white"
                        android:layout_toLeftOf="@+id/img_wallet"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dip"/>

                    <ImageView
                        android:id="@+id/img_wallet"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:src="@drawable/wallet_new"
                        android:tint="@color/white"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="8dip"/>


                </RelativeLayout>



            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linear_indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_top_bar"
                android:orientation="vertical"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                   android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:background="@drawable/bg_text"
                    android:backgroundTint="@color/color_card">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_margin="6dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:backgroundTint="@color/white"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:background="@drawable/bg_text">

                            <ImageView
                                android:id="@+id/teama_logo"
                                android:layout_width="@dimen/_34sdp"
                                android:layout_height="@dimen/_24sdp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/flag_indian"
                                android:scaleType="centerCrop"/>
                        </RelativeLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                               android:layout_centerInParent="true"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Player"
                                    android:textSize="@dimen/_14sdp"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/montserrat_bold"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    >
                                    <TextView
                                        android:id="@+id/totalplayer_selected"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0"
                                        android:textSize="@dimen/_14sdp"
                                        android:textColor="@color/white"
                                        android:fontFamily="@font/montserrat_bold"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="/"
                                        android:textSize="@dimen/_14sdp"
                                        android:layout_marginLeft="4dp"
                                        android:textColor="@color/white"
                                        android:fontFamily="@font/montserrat_bold"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="11"
                                        android:textSize="@dimen/_14sdp"
                                        android:layout_marginLeft="4dp"
                                        android:textColor="@color/white"
                                        android:fontFamily="@font/montserrat_bold"/>
                                </LinearLayout>


                            </LinearLayout>


                            <RelativeLayout
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:backgroundTint="@color/white"
                                android:layout_centerVertical="true"
                                android:layout_alignParentEnd="true"
                                android:background="@drawable/bg_text">

                                <ImageView
                                    android:id="@+id/teamb_logo"
                                    android:layout_width="@dimen/_34sdp"
                                    android:layout_height="@dimen/_24sdp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/flag_newzeland"
                                    android:scaleType="centerCrop"/>
                            </RelativeLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical">

                           <LinearLayout
                               android:layout_width="@dimen/_50sdp"
                               android:layout_height="wrap_content"
                               android:orientation="vertical"
                               android:layout_alignParentStart="true">

                               <TextView
                                   android:id="@+id/teama_name"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="AU-W"
                                   android:layout_gravity="center_horizontal"
                                   android:gravity="center"
                                   android:textSize="12sp"
                                   android:textColor="@color/white"
                                   android:fontFamily="@font/montserrat_bold"/>

                               <TextView
                                   android:id="@+id/teama_counts"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:fontFamily="@font/montserratsemibold"
                                   android:text="0"
                                   android:layout_gravity="center_horizontal"
                                   android:gravity="center"
                                   android:textColor="@color/white"
                                   android:textSize="12sp" />

                           </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Max 7 player from a team"
                                android:layout_centerHorizontal="true"
                                android:textSize="@dimen/_14sdp"
                                android:textColor="@color/white"/>

                            <LinearLayout
                                android:layout_width="@dimen/_50sdp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_alignParentEnd="true">

                                <TextView
                                    android:id="@+id/teamb_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="AU-W"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center"
                                    android:textSize="12sp"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/montserrat_bold"/>

                                <TextView
                                    android:id="@+id/teamb_counts"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserratsemibold"
                                    android:text="0"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:textColor="@color/white"
                                    android:textSize="12sp" />

                            </LinearLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_30sdp"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:backgroundTint="@color/white"
                            android:layout_margin="@dimen/_6sdp"
                            android:background="@drawable/bg_text"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/player_selected1"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="@dimen/_20sdp"
                                android:text="1"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:textColor="@color/viewE0"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:fontFamily="@font/montserrat_bold"
                                android:textSize="14sp"
                                android:background="@drawable/bg_text"/>
                            <TextView
                                android:id="@+id/player_selected2"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="@dimen/_20sdp"
                                android:text="2"
                                android:textColor="@color/viewE0"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:fontFamily="@font/montserrat_bold"
                                android:textSize="14sp"
                                android:background="@drawable/bg_text"/>

                            <TextView
                                android:id="@+id/player_selected3"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="@dimen/_20sdp"
                                android:text="3"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:textColor="@color/viewE0"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:fontFamily="@font/montserrat_bold"
                                android:textSize="14sp"
                                android:background="@drawable/bg_text"/>

                            <TextView
                                android:id="@+id/player_selected4"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="@dimen/_20sdp"
                                android:text="4"
                                android:gravity="center"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/catamaran_extrabold"
                                android:textSize="14sp"
                                android:textColor="@color/viewE0"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:background="@drawable/bg_text"/>

                            <TextView
                                android:id="@+id/player_selected5"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="@dimen/_20sdp"
                                android:text="5"
                                android:textColor="@color/viewE0"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:fontFamily="@font/montserrat_bold"
                                android:textSize="14sp"
                                android:background="@drawable/bg_text"/>

                            <TextView
                                android:id="@+id/player_selected6"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="@dimen/_20sdp"
                                android:text="6"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:textColor="@color/viewE0"
                                android:fontFamily="@font/catamaran_extrabold"
                                android:textSize="14sp"
                                android:background="@drawable/bg_text"/>

                            <TextView
                                android:id="@+id/player_selected7"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="@dimen/_20sdp"
                                android:text="7"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:textColor="@color/viewE0"
                                android:fontFamily="@font/montserrat_bold"
                                android:textSize="14sp"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:background="@drawable/bg_text"/>

                            <TextView
                                android:id="@+id/player_selected8"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="center_vertical"
                                android:text="8"
                                android:textColor="@color/viewE0"
                                android:gravity="center"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:fontFamily="@font/montserrat_bold"
                                android:textSize="14sp"
                                android:background="@drawable/bg_text"/>


                            <TextView
                                android:id="@+id/player_selected9"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="@dimen/_20sdp"
                                android:text="9"
                                android:gravity="center"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:fontFamily="@font/montserrat_bold"
                                android:textSize="14sp"
                                android:textColor="@color/viewE0"
                                android:background="@drawable/bg_text"/>
                            <TextView
                                android:id="@+id/player_selected10"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_gravity="center_vertical"
                                android:text="10"
                                android:textColor="@color/viewE0"
                                android:gravity="center"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:fontFamily="@font/montserrat_bold"
                                android:textSize="14sp"
                                android:background="@drawable/bg_text"/>
                            <TextView
                                android:id="@+id/player_selected11"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="@dimen/_20sdp"
                                android:text="11"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:textColor="@color/viewE0"
                                android:fontFamily="@font/montserrat_bold"
                                android:textSize="14sp"
                                android:background="@drawable/bg_text"/>

                            <ImageView
                                android:id="@+id/clear_all_player"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="@dimen/_20sdp"
                                android:text="11"
                                android:textColor="@color/viewE0"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:gravity="center"
                                android:textSize="14sp"
                                android:layout_gravity="center_vertical"
                                android:padding="5dp"
                                android:visibility="invisible"
                                android:src="@drawable/ic_delete_black_24dp"
                                android:tint="@color/white"
                                android:background="@drawable/default_rounded_button_sportsfight_red"/>
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relative_viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/btn"
                android:background="@color/background_default"
                android:layout_below="@+id/linear_indicator"
                >
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    app:tabTextColor="@color/white"
                    android:background="@drawable/button_selector"
                    android:backgroundTint="@color/fab"
                    app:tabIndicatorGravity="bottom"
                    app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                    app:tabIndicatorHeight="3dp"
                    app:tabIndicatorColor="@color/white"
                    app:tabGravity="fill"
                    app:tabMode="fixed" />

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/tabs"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp" />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
               android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/team_preview"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="PREVIEW"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:fontFamily="@font/montserratsemibold"
                    android:background="@drawable/button_selector_white"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/fab"
                    />

                <TextView
                    android:id="@+id/team_continue"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="CONTINUE"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_marginStart="18dip"
                    android:backgroundTint="@color/colorPrimary"
                    android:enabled="false"
                    android:fontFamily="@font/montserratsemibold"
                    android:background="@drawable/button_selector_white"
                    android:textColor="@color/white"
                    />

            </LinearLayout>
            <RelativeLayout
                android:id="@+id/relativeProgress"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>

</layout>