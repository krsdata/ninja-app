<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="contentviews"
            type="ninja11.fantasy.DocumentsListActivity" />
    </data>
    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="skoreon.fantasy.CreateTeamActivity"
        android:orientation="vertical"
        android:background="@color/grey_lighter_dense"
        >
        <RelativeLayout
            android:id="@+id/tool"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_alignParentTop="true"
            android:background="@drawable/gradient">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_alignParentTop="true"
                style="@style/ToolbarTheme2"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp">
                    <ImageView
                        android:id="@+id/image_back"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:src="@drawable/ic_back"
                        android:gravity="center"
                        android:tint="@color/white"
                        android:padding="@dimen/_4sdp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Verify Document"
                        style="@style/TitleTextStyle."
                        android:fontFamily="@font/circular_medium"
                       android:layout_centerHorizontal="true"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"
                        android:textSize="22sp" />
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>


        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tool">

            <LinearLayout
                android:id="@+id/top_linear_balance"
                android:layout_below="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:background="@color/background_default"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lineapayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear_wallet_Added"
                    android:layout_margin="10dp"
                    android:background="@color/background_default"
                    android:orientation="vertical"
                    android:padding="10dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Verify Communication"
                        android:textColor="@color/text"
                        android:textSize="16sp" />


                    <LinearLayout
                        android:id="@+id/linear_mobile_border"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/bg_text"
                        android:orientation="horizontal"
                        android:padding="15dp">

                        <ImageView
                            android:layout_width="@dimen/_28sdp"
                            android:layout_height="@dimen/_28sdp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/phone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/verify_mobile_message"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:fontFamily="@font/montserrat_bold"
                                android:text="Your mobile number not verified"
                                android:textColor="@color/text" />

                            <TextView
                                android:id="@+id/verify_mobile_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/open_sans_semibold"
                                android:text="8767572614"
                                android:textSize="14sp"
                                android:textColor="@color/text" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_email_border"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/bg_text"
                        android:orientation="horizontal"
                        android:padding="15dp">

                        <ImageView
                            android:layout_width="@dimen/_28sdp"
                            android:layout_height="@dimen/_28sdp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/phone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/verify_email_message"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:fontFamily="@font/montserrat_bold"
                                android:text="Your Email Address verified"
                                android:textColor="@color/text" />

                            <TextView
                                android:id="@+id/verify_email_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textSize="14sp"
                                android:fontFamily="@font/open_sans_semibold"
                                android:text="manoj.i.prasad@gmail.com"
                                android:textColor="@color/text" />
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/linear_documents_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Upload Documents"
                            android:textColor="@color/text"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_53sdp"
                            android:layout_marginTop="@dimen/_15sdp">

                            <TextView
                                android:id="@+id/txt_select_pancrd"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/montserrat_bold"
                                android:gravity="center"
                                android:background="@drawable/button_selector"
                                android:padding="8dp"
                                android:text="PAN"
                                android:textColor="@color/text"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:fontFamily="@font/montserrat_bold"
                                android:gravity="center"
                                android:padding="8dp"
                                android:text="OR"
                                android:textColor="@color/text"
                                android:textSize="@dimen/_16sdp" />
                            <TextView
                                android:id="@+id/txt_select_adharcard"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1"
                                android:background="@drawable/button_selector"
                                android:fontFamily="@font/montserrat_bold"
                                android:gravity="center"
                                android:padding="8dp"
                                android:text="AADHAR"
                                android:textColor="@color/text"
                                android:textSize="@dimen/_16sdp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linear_upload_pancard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"

                            >


                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_20sdp"
                                android:background="@color/white"
                                android:layout_gravity="center_vertical"
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Enter Name (as per pan)"
                                android:textSize="16sp"
                                android:id="@+id/edit_pancard_name"
                                android:inputType="textCapCharacters"
                                android:maxLines="1"
                                android:background="@color/white"
                                android:singleLine="true"
                                android:fontFamily="@font/open_sans_semibold"
                                android:textColor="@color/text"/>
                            </com.google.android.material.textfield.TextInputLayout>


                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@color/white"
                                android:layout_gravity="center_vertical"
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="PANCARD NUMBER"
                                    android:textSize="16sp"
                                    android:id="@+id/edit_pancard_number"
                                    android:inputType="textCapCharacters"
                                    android:maxLines="1"
                                    android:background="@color/white"
                                    android:singleLine="true"
                                    android:fontFamily="@font/open_sans_semibold"
                                    android:textColor="@color/text"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@color/white"
                                android:layout_gravity="center_vertical"
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Confirm PANCARD NUMBER"
                                    android:textSize="16sp"
                                    android:id="@+id/edit_pancard_confirm_number"
                                    android:inputType="textCapCharacters"
                                    android:maxLines="1"
                                    android:background="@color/white"
                                    android:singleLine="true"
                                    android:fontFamily="@font/open_sans_semibold"
                                    android:textColor="@color/text"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/montserrat_bold"
                                android:text="Upload Pancard"
                                android:textColor="@color/greyish"
                                android:textSize="@dimen/_12sdp" />

                            <ImageView
                                android:id="@+id/img_pancard"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_160sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:scaleType="centerInside"
                                android:layout_gravity="center"
                                android:backgroundTint="@color/white"
                                android:background="@drawable/bg_text"
                                android:src="@drawable/upload" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linear_upload_adharcard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_10sdp"
                            android:visibility="gone">


                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <androidx.appcompat.widget.AppCompatEditText
                                    android:id="@+id/edit_adharcard_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:hint="Enter Name"
                                    android:inputType="textCapCharacters"
                                    android:maxLines="1"
                                    android:singleLine="true"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_11sdp" />
                            </com.google.android.material.textfield.TextInputLayout>


                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <androidx.appcompat.widget.AppCompatEditText
                                    android:id="@+id/edit_adhar_number"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:hint="ADHARCARD NUMBER"
                                    android:inputType="textCapCharacters"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_11sdp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <androidx.appcompat.widget.AppCompatEditText
                                    android:id="@+id/edit_adhar_confirm_number"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:hint="Confirm ADHARCARD NUMBER"
                                    android:inputType="textCapCharacters"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_11sdp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/montserrat_bold"
                                android:text="Upload Adharcard Front"
                                android:textColor="@color/text"
                                android:textSize="@dimen/_12sdp" />

                            <ImageView
                                android:id="@+id/img_adharcard_front"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_80sdp"
                                android:scaleType="centerInside"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:backgroundTint="@color/white"
                                android:background="@drawable/bg_text"
                                android:src="@drawable/upload" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/montserrat_bold"
                                android:text="Upload Adharcard Back"
                                android:textColor="@color/text"
                                android:textSize="@dimen/_12sdp" />

                            <ImageView
                                android:id="@+id/img_adharcard_back"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_80sdp"
                                android:scaleType="centerInside"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:backgroundTint="@color/white"
                                android:background="@drawable/bg_text"
                                android:src="@drawable/upload" />

                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/submit_documents"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginBottom="10dp"
                            app:cornerRadius="@dimen/_8sdp"
                            android:fontFamily="@font/montserrat_regular"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="NEXT"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp" />


                    </LinearLayout>
                    <!-- End of Uploadidng documents -->

                    <LinearLayout
                        android:id="@+id/linear_bankaccount_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="Bank Account Details"
                            android:textColor="@color/greyish"
                            android:textSize="@dimen/_12sdp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@color/white"
                            android:layout_gravity="center_vertical"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Bank Name"
                                android:textSize="16sp"
                                android:id="@+id/edit_bank_name"
                                android:inputType="textCapCharacters"
                                android:maxLines="1"
                                android:background="@color/white"
                                android:singleLine="true"
                                android:fontFamily="@font/open_sans_semibold"
                                android:textColor="@color/text"/>
                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@color/white"
                            android:layout_gravity="center_vertical"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Account holder name"
                                android:textSize="16sp"
                                android:id="@+id/edit_account_holder_name"
                                android:inputType="textCapCharacters"
                                android:maxLines="1"
                                android:background="@color/white"
                                android:singleLine="true"
                                android:fontFamily="@font/open_sans_semibold"
                                android:textColor="@color/text"/>
                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@color/white"
                            android:layout_gravity="center_vertical"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Account Number"
                                android:textSize="16sp"
                                android:id="@+id/edit_account_number"
                                android:inputType="textCapCharacters"
                                android:maxLines="1"
                                android:background="@color/white"
                                android:singleLine="true"
                                android:fontFamily="@font/open_sans_semibold"
                                android:textColor="@color/text"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@color/white"
                            android:layout_gravity="center_vertical"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Confirm account Number"
                                android:textSize="16sp"
                                android:id="@+id/edit_account_number_confirm"
                                android:inputType="textCapCharacters"
                                android:maxLines="1"
                                android:background="@color/white"
                                android:singleLine="true"
                                android:fontFamily="@font/open_sans_semibold"
                                android:textColor="@color/text"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@color/white"
                            android:layout_gravity="center_vertical"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="IFSC CODE"
                                android:textSize="16sp"
                                android:id="@+id/edit_account_ifsc_code"
                                android:inputType="textCapCharacters"
                                android:maxLines="1"
                                android:background="@color/white"
                                android:singleLine="true"
                                android:fontFamily="@font/open_sans_semibold"
                                android:textColor="@color/text"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@color/white"
                            android:layout_gravity="center_vertical"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Account TYpe (saving/current)"
                                android:textSize="16sp"
                                android:id="@+id/edit_accout_type"
                                android:inputType="textCapCharacters"
                                android:maxLines="1"
                                android:background="@color/white"
                                android:singleLine="true"
                                android:fontFamily="@font/open_sans_semibold"
                                android:textColor="@color/text"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="UPLOAD CHEQUE / PASSBOOK"
                            android:textColor="@color/greyish"
                            android:textSize="@dimen/_12sdp" />

                        <ImageView
                            android:id="@+id/img_bank_passbook"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_160sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:scaleType="centerInside"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/white"
                            android:background="@drawable/bg_text"
                            android:src="@drawable/upload" />


                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/submit_bank_documents"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/default_rounded_button_sportsfight"
                            android:fontFamily="@font/montserrat_regular"
                            android:gravity="center"
                            app:cornerRadius="@dimen/_8sdp"
                            android:text="Next"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_paytm_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@color/white"
                            android:layout_gravity="center_vertical"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="ENTER PAYTM NUMBER"
                                android:textSize="16sp"
                                android:maxLength="10"
                                android:id="@+id/edit_paytm_number"
                                android:inputType="number"
                                android:maxLines="1"
                                android:background="@color/white"
                                android:singleLine="true"
                                android:fontFamily="@font/open_sans_semibold"
                                android:textColor="@color/text"/>
                        </com.google.android.material.textfield.TextInputLayout>

