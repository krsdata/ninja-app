<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="contentviews"
            type="ninja11.fantasy.SelectTeamActivity" />
    </data>

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_lighter_dense"
        tools:context="skoreon.fantasy.CreateTeamActivity"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/tool"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:layout_alignParentTop="true"
            android:background="@drawable/gradient">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:layout_alignParentTop="true"
                style="@style/ToolbarTheme2"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/image_back"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:src="@drawable/ic_back"
                        android:gravity="center"
                        android:tint="@color/white"
                        android:padding="@dimen/_4sdp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Team"
                        style="@style/TitleTextStyle."
                        android:fontFamily="@font/circular_medium"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"
                        android:textSize="22sp" />
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bottom"
                android:backgroundTint="@color/grey_lighter_dense"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tool">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_select_team"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="100dp"
                android:clipToPadding="false"/>


        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            >

            <TextView
                android:id="@+id/create_team"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="CREATE TEAM"
                android:textSize="10sp"
                android:gravity="center"
                android:padding="10dp"
                android:layout_marginLeft="18dip"
                android:backgroundTint="@color/fab"
                android:fontFamily="@font/montserratsemibold"
                android:background="@drawable/button_selector"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/team_continue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="JOIN CONTEST"
                android:textSize="10sp"
                android:gravity="center"
                android:padding="10dp"
                android:layout_marginLeft="18dip"
                android:fontFamily="@font/montserratsemibold"
                android:background="@drawable/button_selector"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/white"
                />


        </LinearLayout>

        <include
            android:visibility="gone"
            android:id="@+id/loader"
            layout="@layout/my_loader"/>


    </RelativeLayout>

</layout>