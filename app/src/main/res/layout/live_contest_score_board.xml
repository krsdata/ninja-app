<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.cardview.widget.CardView
    android:id="@+id/live_matches_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="12dp"
    android:layout_margin="@dimen/matches_view_top_margin"
    app:cardCornerRadius="6sp"
    >

    <LinearLayout
        android:id="@+id/linear_trades_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_8sdp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="@dimen/matches_view_right_margin_inner"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SCORECARD"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/text"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/matches_view_left_margin_inner"
            android:layout_marginRight="@dimen/matches_view_right_margin_inner"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_51sdp"
                android:orientation="horizontal"
                android:background="@color/fab"
                android:gravity="center">
                 <com.mikhaellopez.circularimageview.CircularImageView
                     android:id="@+id/img_teama_logo"
                     android:layout_width="25dp"
                     android:layout_height="25dp"
                     android:layout_marginRight="10dp"
                     android:src="@drawable/placeholder_player_teama"/>
            <TextView
                android:id="@+id/teamAName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IND"
                android:textSize="8sp"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/teamAScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="87-5"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/teamAOver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(10)"
                android:layout_marginLeft="5dp"
                android:textSize="8sp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/_51sdp"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@color/color_card"
                android:gravity="center"
                >
                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/img_teamb_logo"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/placeholder_player_teama"/>
            <TextView
                android:id="@+id/teamBName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PAK"
                android:textSize="8sp"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/teamBScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="86-5"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/teamBOver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(10)"
                android:layout_marginLeft="5dp"
                android:textSize="8sp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/white"
                />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="@dimen/matches_view_right_margin_inner"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/status_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textSize="@dimen/small_info_size"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/green"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/greyish"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/matches_view_left_margin_inner"
            android:layout_marginRight="@dimen/matches_view_right_margin_inner"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="left">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prize Pool"
                    android:textSize="@dimen/small_info_size"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/text"/>

                <TextView
                    android:id="@+id/contest_prize_pool"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹3 Lakhs"
                    android:textSize="@dimen/small_info_size"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/text"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spots"
                    android:textSize="@dimen/small_info_size"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/text"/>
                <TextView
                    android:id="@+id/contest_spots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6689"
                    android:textSize="@dimen/small_info_size"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/text"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entry"
                    android:textSize="@dimen/small_info_size"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/text"/>

                <TextView
                    android:id="@+id/contest_entry_prize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹49"
                    android:textSize="@dimen/small_info_size"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/text"/>


            </LinearLayout>



        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="@color/greyish"
            android:layout_marginTop="10dp"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>
</layout>