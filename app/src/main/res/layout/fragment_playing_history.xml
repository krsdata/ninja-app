<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_lighter_dense" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/_74sdp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_5sdp"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="16dp"
                            >

                            <ImageView
                                android:id="@+id/ic_match_played"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentLeft="true"
                                android:src="@drawable/played"
                                />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_toRightOf="@+id/ic_match_played"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="20dp">
                                <TextView
                                    android:id="@+id/txt_match_played"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="16sp"
                                    android:textColor="@color/text"
                                    android:lineSpacingExtra="6sp"
                                    android:fontFamily="@font/open_sans_semibold"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Match Played"
                                    android:textSize="10sp"
                                    android:textColor="@color/text"
                                    android:lineSpacingExtra="7sp"
                                    android:fontFamily="@font/open_sans_light"
                                    />

                            </LinearLayout>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/_74sdp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_5sdp"
                        android:layout_marginLeft="20dp"

                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/ic_contest_played"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/contest"
                                android:layout_alignParentLeft="true"
                                />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_toRightOf="@+id/ic_contest_played"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="20dp">
                                <TextView
                                    android:id="@+id/txt_contest_played"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="16sp"
                                    android:textColor="@color/text"
                                    android:fontFamily="@font/open_sans_semibold"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Contest Played"
                                    android:textSize="10sp"
                                    android:textColor="@color/text"
                                    android:fontFamily="@font/open_sans_light"
                                    />

                            </LinearLayout>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/_74sdp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_5sdp"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="16dp"
                            >

                            <ImageView
                                android:id="@+id/ic_contest_win"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentLeft="true"
                                android:src="@drawable/win"
                                />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_toRightOf="@+id/ic_contest_win"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="20dp">
                                <TextView
                                    android:id="@+id/txt_contest_win"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="16sp"
                                    android:textColor="@color/text"
                                    android:lineSpacingExtra="6sp"
                                    android:fontFamily="@font/open_sans_semibold"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Contest Win"
                                    android:textSize="10sp"
                                    android:textColor="@color/text"
                                    android:lineSpacingExtra="7sp"
                                    android:fontFamily="@font/open_sans_light"
                                    />

                            </LinearLayout>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_5sdp"
                        android:layout_marginLeft="20dp"

                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_74sdp"
                            android:layout_gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/ic_total_wining"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:src="@drawable/total_win"
                                android:layout_alignParentLeft="true"
                                />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_toRightOf="@+id/ic_total_wining"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="20dp">
                                <TextView
                                    android:id="@+id/total_balance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0.0"
                                    android:textSize="16sp"
                                    android:textColor="@color/text"
                                    android:fontFamily="@font/open_sans_semibold"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Total Winning"
                                    android:textSize="10sp"
                                    android:textColor="@color/text"
                                    android:fontFamily="@font/open_sans_light"
                                    />

                            </LinearLayout>

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>




            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress_bar_matches"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginLeft="16dp" android:layout_marginRight="16dp"
                android:indeterminate="true" android:layout_centerInParent="true" />

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>
</layout>