        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_alignParentTop="true"
                    android:fitsSystemWindows="true"
                    style="@style/ToolbarTheme2">

                    <ImageView
                        android:layout_width="@dimen/_160sdp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/logo"
                        android:visibility="gone"
                        android:layout_marginBottom="@dimen/_40sdp"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_20sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sign Up"
                        android:textColor="@color/text"
                        android:gravity="start"
                        android:fontFamily="@font/montserrat_bold"
                        android:textSize="@dimen/_25sdp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Show your cricket skills &amp; win cash daily
Join real fantasy sports, play fantasy cricket ...Sign Up now "
                        android:textSize="@dimen/_16sdp"
                        android:textColor="@color/text"
                        android:fontFamily="@font/circular_medium"
                        android:gravity="start"
                        android:layout_marginTop="@dimen/_7sdp"/>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/input_refferal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:background="@color/white"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="REFERAL CODE"
                            android:textSize="16sp"
                            android:id="@+id/edit_invitecode"
                            android:inputType="textCapCharacters"
                            android:maxLines="1"
                            android:maxLength="24"
                            android:background="@color/white"
                            android:singleLine="true"
                            android:fontFamily="@font/open_sans_semibold"
                            android:textColor="@color/text"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/white"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Team Name(Nick Name)"
                            android:textSize="16sp"
                            android:id="@+id/edit_team_name"
                            android:inputType="textCapCharacters"
                            android:maxLines="1"
                            android:maxLength="24"
                            android:background="@color/white"
                            android:singleLine="true"
                            android:fontFamily="@font/open_sans_semibold"
                            android:textColor="@color/text"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/white"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Name"
                            android:textSize="16sp"
                            android:id="@+id/edit_name"
                            android:inputType="textCapCharacters"
                            android:maxLines="1"
                            android:maxLength="24"
                            android:background="@color/white"
                            android:singleLine="true"
                            android:fontFamily="@font/open_sans_semibold"
                            android:textColor="@color/text"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/white"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Mobile no"
                            android:textSize="16sp"
                            android:id="@+id/edit_mobile"
                            android:inputType="number"
                            android:maxLines="1"
                            android:maxLength="10"
                            android:background="@color/white"
                            android:singleLine="true"
                            android:fontFamily="@font/open_sans_semibold"
                            android:textColor="@color/text"/>

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/white"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Email"
                            android:textSize="16sp"
                            android:id="@+id/edit_email"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:background="@color/white"
                            android:singleLine="true"
                            android:fontFamily="@font/open_sans_semibold"
                            android:textColor="@color/text"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/register_button"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:background="@drawable/default_rounded_button_sportsfight"
                        android:text="Register"
                        android:layout_marginBottom="@dimen/_50sdp"
                        app:cornerRadius="@dimen/_8sdp"
                        android:fontFamily="@font/tungab"
                        android:textColor="@color/white" />
                </LinearLayout>

            </LinearLayout>




        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

