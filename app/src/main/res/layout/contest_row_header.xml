<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/matches_view_top_margin"
    android:orientation="vertical"
    android:background="@color/grey_lighter_dense">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/contest_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mega Contest"
            android:paddingStart="@dimen/_10sdp"
            android:fontFamily="@font/montserrat_bold"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/text"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/contest_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingEnd="@dimen/_16sdp"
            android:layout_centerVertical="true"
            android:text="Get ready for mega winning!!"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/text"
            android:textSize="@dimen/_10sdp" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_all_contest"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</LinearLayout>